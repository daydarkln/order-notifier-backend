{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "cleanDistDir": true
      }
    },
    {
      "src": "server/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "include": ["dist/**"]
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/client" },
    { "source": "/api/(.*)", "destination": "/server" }
  ]
}
